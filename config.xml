<?xml version='1.0' encoding='utf-8'?>
<widget id="com.pegiLagi.mobileApps" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>pegiLagi</name>
    <description>
        A mobile apps for tourism
    </description>
    <author email="freddokresna@gmail.com" href="http://pegilagi.com">
        Pegi Lagi Team
    </author>
    <content src="page/template/splash.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/android/Icon-36.png" />
        <icon density="mdpi" src="res/icon/android/Icon-48.png" />
        <icon density="hdpi" src="res/icon/android/Icon-72.png" />
        <icon density="xhdpi" src="res/icon/android/Icon-96.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-sqlite-storage" spec="^2.5.2" />
    <plugin name="cordova-plugin-geolocation" spec="^4.0.1" />
    <engine name="browser" spec="^5.0.4" />
    <engine name="android" spec="^7.1.4" />
</widget>
